import java.util.Scanner;

public class TimeConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

      
        int hours = Integer.parseInt(scanner.nextLine());
        int minutes = Integer.parseInt(scanner.nextLine());
        int seconds = Integer.parseInt(scanner.nextLine());

        
        int extraHours = minutes / 60;
        int remainingMinutes = minutes % 60;

        int totalHours = hours + extraHours;

       
        System.out.println("Total Number of hours is " + totalHours);
        System.out.println("Total Number of minutes is " + remainingMinutes);
        System.out.println("Total Number of seconds is " + seconds);

        scanner.close();
    }
}
